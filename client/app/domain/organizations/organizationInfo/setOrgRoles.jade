section

  h3 {{ vm.org.name }}

  h5 Set organization roles

  ui-select(ng-model='vm.selectedRoles' multiple on-select='vm.onSelectCallback($item, $model)')
    ui-select-match(placeholder='Select roles...')
      span(ng-bind='$item.name')
    ui-select-choices(
      repeat='item in vm.roles | filter:$select.search track by item.id'
      refresh='refreshRoles($select.search)'
      refresh-delay="0"
    )
      span(ng-bind='item.name')

  table.table.table-striped.table-hover.table-responsive(ng-show='vm.orgRoles')
    thead
      th Id
      th Name
      th
      th Last Timestamp
      th
    tbody
      tr(ng-repeat='row in vm.orgRoles track by row.id')
        td {{ row.id }}
        td {{ row.name }}
        td.text-center
          span.label.label-info(ng-if='row.isPublic') Public
        td {{ row.ts | amCalendar }}
        td
          button.btn.btn-danger.btn-xs(ng-click='vm.onDeleteOrg(row)') Delete
