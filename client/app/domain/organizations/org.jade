.container
  h1 Organizations
    .pull-right
      button.btn.btn-primary(ui-sref='.create') Create
      = ' '
      button.btn.btn-primary(ui-sref='.joinPublic') Join Public

  .ui-view(cg-busy='vm.orgTable.busy')
    table.table.table-striped.table-hover.table-responsive(
    ng-table='vm.ngTableParams'
    )
      tr.clickable(
      ng-repeat='row in $data track by row.id'
      ui-sref='.info({orgId: row.id})'
      )
        td(data-title="'Name'")
          | {{row.name}}
        td(data-title="'Is public?'")
          input(type='checkbox' ng-model='row.isPublic' disabled)
        td(data-title="'Logo'")
          img(ng-src="{{row.logo}}")
