.container
  h1 Providers

  table.table.table-striped.table-hover.table-responsive(
  ng-table='vm.ngTableParams'
  )
    tr.clickable(
    ng-repeat='row in $data track by row.id'
    ng-click='vm.click(row,$event)'
    )
      td(title="'Name'")
        | {{row.name}}
      td(title="'Provider'")
        | {{row.provider}}
      td(title="'Code'")
        | {{row.code}}
      td(title="'Client ID'")
        | {{row.clientId}}
      td(title="'Client Secret'")
        | {{row.clientSecret}}
